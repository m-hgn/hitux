# - bubble -
bubble()
{
    bubble_config
    cat <<EOF
    ${body}     ___${reset}
    ${body}    (${eye}Â·${beak_feet}<${eye}Â·${body})    ${bubble}ðŸ­¢ðŸ­§ðŸ­’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆðŸ­Œ${reset}
    ${body}    / ${belly}_${body} \\____  ${bubble}ðŸ­¢â–ˆâ–ˆ${text}${invert}    ${b}os${reset}${bubble}${invert}  ${ht0}âº${text}${bubble}  pop!      ${reset}${bubble}â–ˆâ–ˆ${reset}
    ${body}   / ${belly}/ \\ ${body}\\--Â´   ${bubble}â–ˆâ–ˆ${text}${invert}    ${b}wm${reset}${bubble}${invert}  ${ht1}âº${text}${bubble}  bspwm     ${reset}${bubble}â–ˆâ–ˆ${reset}
    ${body}  // ${belly}\\_/ ${body}/      ${bubble}â–ˆâ–ˆ${text}${invert}  ${b}term${reset}${bubble}${invert}  ${ht2}âº${text}${bubble}  kitty     ${reset}${bubble}â–ˆâ–ˆ${reset}
    ${beak_feet}   _${body}\\/ \\/${beak_feet}_      ${bubble}â–ˆâ–ˆ${text}${invert} ${b}shell${reset}${bubble}${invert}  ${ht3}âº${text}${bubble}  zsh       ${reset}${bubble}â–ˆâ–ˆ${reset}
                    ${bubble}ðŸ­’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆðŸ­${reset}
