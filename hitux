    ${body}    / ${belly}_ ${body}\\____   ${border}â”‚     ${label}wm  ${ht1}âº  ${text}bspwm     ${border}â”‚
    ${body}   / ${belly}/ \\ ${body}\\--Â´   ${border}â”‚   ${label}term  ${ht2}âº  ${text}kitty     ${border}â”‚
    ${body}  // ${belly}\\_/ ${body}/      ${border}â”‚  ${label}shell  ${ht3}âº  ${text}zsh       ${border}â”‚
    ${beak_feet}   _${body}\\/ \\/${beak_feet}_      ${border}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯

